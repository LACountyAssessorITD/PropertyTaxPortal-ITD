@model PropertyTaxPortal.Models.Category

@{
    ViewData["Title"] = @ViewBag.ButtonValue;
}
<script src="../js/jquery-1.7.1.js" type="text/javascript"></script>
<script src="../js/jquery-1.7.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    function Delete(id){
         var txt;
         var del = confirm('Are you sure you want to delete?');
         if(del == true)
         {
             $.ajax(
                 {
                     type: "POST",
                     url: '@Url.Action("Delete", "Category")',
                     data: {
                         id: id
                     },
                     error: function (result) {
                         alert("error");
                     },
                     success: function (result) {
                         if (result == true) {
                             var baseUrl = "/Index";
                             window.location.reload();
                         }
                         else {
                             alert("There is a problem, Try Later!");
                         }
                     }
                 });
         }
    }
</script>
<div style="width:50%;text-align:center">
    <h1>@ViewBag.Caption</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateorEdit">
            <input type="hidden" asp-for="CategoryID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table style="border:1px;width:750px">
                <tr>
                    <td style="text-align:right;padding-right:10px;">
                        <label asp-for="Descr" class="control-label"></label>
                    </td>
                    <td>
                        <div class="form-group" style="padding-bottom:10px;">
                            <input asp-for="Descr" class="form-control" />
                            <span asp-validation-for="Descr" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="text-align:right;padding-right:10px;">
                        <label asp-for="categoryType" class="control-label"></label>
                    </td>
                    <td>
                        <div class="form-group" style="padding-bottom:10px;">
                            @Html.DropDownList("categoryType", null, htmlAttributes: new { @class = "form-control" })
                            <span asp-validation-for="categoryType" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </table>
            <div class="form-group" style="width:60%;text-align:center">
                <a asp-action="Index" style="padding-right:15px"><b>  << Back to List</b></a><input type="submit" style="width:100px;" value="@ViewBag.ButtonValue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


