            <p>
                <strong>@Localizer["Prior Assessed Value"]</strong> - @Localizer["This is the Assessor’s valuation of"]
                @Localizer["the property prior to the recent transfer/new construction date."]
            </p>
        </div>
        <div class="bill-step">
            <div>16</div>
            <p><strong>@Localizer["Net Assessed Value"]</strong> - @Localizer["The current assessed value less the prior assessed value."]</p>
        </div>
