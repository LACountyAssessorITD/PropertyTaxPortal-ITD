

@using Microsoft.AspNetCore.Mvc.Localization


@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "NOTICE OF DELINQUENCY";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="container-fluid bg-header bg-bills">
    <h2 class="display-4">@Localizer["NOTICE OF DELINQUENCY"]</h2>
</section>



<section class="tax-content container my-4">

    <img class="" src="~/images/Tax-Bills/nod2016.gif" usemap="#nod_Map">
    <map name="nod_Map">

        <area shape="circle" coords="462,979,15" href="javascript:void(0)" onclick="displayDescription(16)">
        <area shape="circle" coords="560,894,15" href="javascript:void(0)" onclick="displayDescription(15)">
        <area shape="circle" coords="607,746,15" href="javascript:void(0)" onclick="displayDescription(14)">
        <area shape="circle" coords="419,746,15" href="javascript:void(0)" onclick="displayDescription(13)">
        <area shape="circle" coords="231,745,15" href="javascript:void(0)" onclick="displayDescription(12)">
        <area shape="circle" coords="606,675,15" href="javascript:void(0)" onclick="displayDescription(11)">
        <area shape="circle" coords="418,675,15" href="javascript:void(0)" onclick="displayDescription(10)">
        <area shape="circle" coords="229,674,15" href="javascript:void(0)" onclick="displayDescription(9)">
        <area shape="circle" coords="655,601,15" href="javascript:void(0)" onclick="displayDescription(8)">
        <area shape="circle" coords="309,589,15" href="javascript:void(0)" onclick="displayDescription(7)">
        <area shape="circle" coords="118,416,15" href="javascript:void(0)" onclick="displayDescription(6)">
        <area shape="circle" coords="93,319,15" href="javascript:void(0)" onclick="displayDescription(5)">
        <area shape="circle" coords="516,170,15" href="javascript:void(0)" onclick="displayDescription(4)">
        <area shape="circle" coords="45,224,15" href="javascript:void(0)" onclick="displayDescription(3)">
        <area shape="circle" coords="28,153,15" href="javascript:void(0)" onclick="displayDescription(2)">
        <area shape="circle" coords="221,112,15" href="javascript:void(0)" onclick="displayDescription(1)">

    </map>


    <div class=" text-left">
        <div class="bill-step">
            <div>1</div>
            <p>
                <strong>
                    @Localizer["Notice of Delinquency"]
                </strong> - @Localizer["The Notice of Delinquency, in accordance with California Revenue and Taxation Code, Section 2621, reminds taxpayers"]
                @Localizer["that their property taxes are delinquent and will default on July 1. If payment is not received or United States Postal Service (USPS) postmarked by June 30,"]
                @Localizer["on July 1, a $15 redemption fee will be imposed and defaulted taxes will be subject to additional penalties of 1.5 percent per month."]
            </p>
        </div>
        <div class="bill-step">
            <div>2</div>
            <p>
                <strong>
                    @Localizer["Assessor's Identification Number"]
                </strong> - @Localizer["This area identifies the Assessor’s Identification Number – (1234-567-890). The Assessor’s"]
                @Localizer["Identification Number (AIN) is a ten-digit number assigned by the Office of the Assessor to each piece of real property in Los Angeles County."]
                @Localizer["This ten-digit AIN is made up of a four-digit Map Book Number (1234), a three-digit Page Number (567), and a three-digit Parcel Number (890)."]
            </p>
            <p>
                <strong>
                    @Localizer["Year and Sequence"]
                </strong> - @Localizer["This area identifies the Year and Sequence – (16 000). This five digit number is made up of a two-digit tax"]
                @Localizer["year and a three-digit sequence or bill type. For example, a 2016 annual bill is displayed as 16 000, however a 2016 supplemental bill may be"]
                @Localizer["displayed as 16 010."]
            </p>
        </div>
        <div class="bill-step">
            <div>3</div>
            <p>
                <strong>
                    @Localizer["General Tax Levy"]
                </strong> - @Localizer["This tax amount is the general one percent (1%) tax rate levied against every property in the County. The"]
                @Localizer["calculation is 1% multiplied by the \"Net Taxable Value.\""]
            </p>
        </div>
        <div class="bill-step">
            <div>4</div>
            <p><strong>@Localizer["Assessee"]</strong> - @Localizer["The owner of record and the mailing address on file with the Office of the Assessor"]</p>
        </div>
        <div class="bill-step">
            <div>5</div>
            <p>
                <strong>
                    @Localizer["Electronc Fund Transfer (EFT) Number"]
                </strong> - @Localizer["The EFT number is used to make credit card/Visa Debit card payments over the telephone."]
                @Localizer["To initiate a credit card/Visa Debit card payment, please call 1(888) 473-0835. However, there are processing fees when paying by credit card/Visa"]
                @Localizer["Debit card. Each transaction is limited to $99,999.99. The PIN number is used to make electronic check payment to protect your security and privacy"]
                @Localizer["and is used to pay your current year and defaulted taxes online. Effective with tax bills issued after August 2013, the PIN may contain all alpha,"]
                @Localizer["all numeric, or alpha/numeric characters. The alpha letter 'O' is not used in the PIN. The '0' is always a number zero."]
            </p>
        </div>
        <div class="bill-step">
            <div>6</div>
            <p><strong>@Localizer["Voted Indebtedness"]</strong> - @Localizer["Voter-approved taxes levied against property"]</p>
        </div>
        <div class="bill-step">
            <div>7</div>
            <p>
                <strong>
                    @Localizer["Direct Assessments"]
                </strong> - @Localizer["These are additional charges placed on the property tax bills. These charges are not based on Assessor’s"]
                @Localizer["valuations. Examples of direct assessments are charges for sewer maintenance, water, or fire districts. For questions regarding these assessments,"]
                @Localizer["please contact the agency. The telephone number for each agency is listed on the bill, or please visit the Department of Auditor-Controller’s"]
                @Localizer["website for a Direct Assessment Listing."]
            </p>
        </div>
        <div class="bill-step">
            <div>8</div>
            <p>
                <strong>
                    @Localizer["Special Information"]
                </strong> – @Localizer["This section provides important information about the bill and states whether there are any delinquent taxes"]
                @Localizer["owed."]
            </p>
        </div>
        <div class="bill-step">
            <div>9</div>
            <p>
                <strong>
                    @Localizer["Total Taxes Due"]
                </strong> - @Localizer["This is the total amount due for the bill. The Annual Secured Property Tax Bill has two payment stubs. The first"]
                @Localizer["installment is due November 1 and is delinquent December 10. If the first installment is not received or United States Postal Service (USPS)"]
                @Localizer["postmarked by December 10, a 10 percent penalty will be imposed. The second installment is due February 1 and is delinquent April 10. If the second"]
                @Localizer["installment is not received or USPS postmarked on or before April 10, a 10 percent penalty and a $10.00 cost will be imposed. Taxpayers must be sure"]
                @Localizer["to include the payment stub with any type of payment and write their Assessor's Identification Number with the Year/Sequence Number on their check."]
            </p>
        </div>
        <div class="bill-step">
            <div>10</div>
            <p><strong>@Localizer["Property Location and/or Property Description"]</strong> - @Localizer["The property address and/or legal description on record with the Office of the Assessor."]</p>
        </div>
        <div class="bill-step">
            <div>11</div>
            <p><strong>@Localizer["Current Assessed Value"]</strong> - @Localizer["The Assessor’s valuation of the property after the adjustment."]</p>
        </div>
        <div class="bill-step">
            <div>12</div>
            <p><strong>@Localizer["Assessor's Regional Office"]</strong> - @Localizer["This is the address and telephone number to contact for questions regarding the assessed value of the property."]</p>
        </div>
        <div class="bill-step">
            <div>13</div>
            <p><strong>@Localizer["Less Exemption"]</strong> - @Localizer["Exemptions, if any, are deducted from the assessed value."]</p>
        </div>
        <div class="bill-step">
            <div>14</div>
            <p><strong>@Localizer["Returned Check Charge"]</strong> - @Localizer["There is a $50.00 charge for any checks returned by the bank"]</p>
        </div>
        <div class="bill-step">
            <div>15</div>
            <p><strong>@Localizer["Net Taxable Value"]</strong> - @Localizer["The difference between the current value and exemptions."]</p>
        </div>
        <div class="bill-step">
            <div>16</div>
            <p>
                <strong>
                    @Localizer["2nd Installment Delinquency Date"]
                </strong> - @Localizer["If paying the bill in installments, the second installment must be received or United States Postal"]
                @Localizer["Service postmarked by this date, or a 10 percent penalty and a $10.00 cost will be imposed."]
            </p>
        </div>

    </div>
</section>


