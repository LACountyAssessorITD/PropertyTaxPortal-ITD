@model PropertyTaxPortal.Models.FAQ

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FAQ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateorEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FAQID" />
            <table style="border:1px;width:750px">
                <tr>
                    <td>
                        <label asp-for="CategoryID" class="control-label"></label>
                    </td>
                    <td>
                        <div class="form-group">
                            @Html.DropDownList("categoryID", null, htmlAttributes: new { @class = "form-control" })
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="question" class="control-label"></label>
                    </td>
                    <td>
                        <div class="form-group">
                            <input asp-for="question" class="form-control" />
                            <span asp-validation-for="question" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="answer" class="control-label"></label>
                    </td>
                    <td>
                        <div class="form-group">
                            <input asp-for="answer" class="form-control" />
                            <span asp-validation-for="answer" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="updatedOn" class="control-label"></label>
                    </td>
                    <td>
                        <div class="form-group">
                            <input asp-for="updatedOn" class="form-control" />
                            <span asp-validation-for="updatedOn" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        Show as
                    </td>
                    <td>
                        <div class="form-group">
                            @Html.DropDownList("featuredCode", new List<SelectListItem>
                            {
                            new SelectListItem{ Text="Featured", Value = "NFE" },
                            new SelectListItem{ Text="Current", Value = "NCE" },
                            new SelectListItem{ Text="Archieved", Value = "NAE" }
                            })
                            <span asp-validation-for="featuredCode" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                </table>
                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

